<div class="message">
  <div class="user-date">
    <div class="user">
      <!-- 投稿したユーザー名情報を出力する -->
      <%= message.user.name %>
    </div>
    <div class="date">
      <!-- 投稿した時刻を出力する -->
      <%= message.created_at %>
    </div>
  </div>
  <div class="message">
    <%= message.content %>
      <!-- 投稿したメッセージ内容を記述する -->
  </div>
</div>